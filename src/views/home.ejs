<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<style>
    .table-container {
    padding: 15px 20px;
}
.title {
    font-size: 25px;
    font-weight: 600;
    padding-bottom: 10px;
}
    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    tr:hover {background-color: #ccc;}
    </style>

<body>
    <ul>
        <li><a class="active" href="/">Home</a></li>
        <li><a href="/create">Create Users</a></li>
      </ul>
      <div class="table-container">
        <div class="title">
            List user
        </div>
      
      <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
        
        <% for (let i = 0; i < listUsers.length; i++) { %>
          <tr>
            <td><%= listUsers[i].id %></td>
            <td><%= listUsers[i].name %></td>
            <td><%= listUsers[i].email %></td>
            <td><%= listUsers[i].phone %></td>
            <td>
              <a href="/update/<%= listUsers[i].id %>">Edit</a> 
              <!-- thẻ a ứng với phương thức get -->
              <form action="/delete-user/<%= listUsers[i].id %>" method="POST">
                <button>Delete</button>
              </form>

            </td>
          </tr>
          <% } %>
      </table>
    </div>
</body>
</html>