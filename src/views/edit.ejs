<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update A User</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/create">Create Users</a></li>
      </ul>
      <div class="form-add-new">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend>Update a user</legend>

                <div class="input-group d-none">
                    <label >Id: </label>
                    <input type="text" name="userId" value="<%= userEdit.id %>"/> 
                    <!-- server dựa vào name để lấy giá trị -->
    
                </div>
        
            <div class="input-group">
                <label >Email: </label>
                <input type="text" name="email" value="<%= userEdit.email %>"/> 
                <!-- server dựa vào name để lấy giá trị -->

            </div>
            <div class="input-group">
                <label >Name: </label>
                <input type="text"name="name" value="<%= userEdit.name %>"/>

            </div>
            <div class="input-group">
                <label >City: </label>
                <input type="text" name="city" value="<%= userEdit.city %>"/>

            </div>
            <div>
                <button> Save </button>
            </div>
            </fieldset>
         </form>

      </div>
</body>
</html>